<html t:type="layout" title="Account"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter">
<div class="page-fixed-main-content">
	<div class="row">
		<div class="col col-md-12">
			<div class="portlet light bordered">
				<div class="portlet-title">
					<div class="caption font-blue-steel">
						<i class="icon-user font-blue-steel"></i> <span
							class="caption-subject bold uppercase"> Account Info</span>
					</div>
					<div class="actions">
						<a class="btn btn-circle btn-icon-only btn-default fullscreen"
							href="#"> </a>
					</div>
				</div>
				<div class="portlet-body form">
					<form t:type="form" role="form">
						<div class="form-body">
							<div
								class="form-group form-md-line-input form-md-floating-label has-info">
								<input t:type="textfield" t:value="account.firstname" class="form-control" t:id="firstname" />
								<label for="form_control_1">First name </label> <span
									class="help-block"></span>
							</div>
							<div
								class="form-group form-md-line-input form-md-floating-label has-info">
								<input t:type="textfield" t:value="account.lastname" class="form-control" t:id="lastname" />
								<label for="form_control_1">Last name</label> <span
									class="help-block"></span>
							</div>
							<div
								class="form-group form-md-line-input form-md-floating-label has-info">
								<input t:type="textfield" t:value="account.email" class="form-control" t:id="email" />
								<label for="form_control_1">Email</label>
							</div>
							<div
								class="form-group form-md-line-input form-md-floating-label has-info">
								<input t:type="textfield" t:value="account.phoneNumber" class="form-control" t:id="phone" />
								<label for="form_control_1">Phone</label>
							</div>
							<div
								class="form-group form-md-line-input form-md-floating-label has-info">
								<input t:type="textfield" t:value="account.webSite" class="form-control" t:id="web" />
								<label for="form_control_1">Web</label>
							</div>
							<div
								class="form-group form-md-line-input form-md-floating-label has-info">
								<!-- <select t:type="select" class="form-control edited" id="form_control_1">
								</select> <label for="form_control_1">Dropdown sample</label> -->
							</div>
						</div>
						<div class="form-actions noborder">
							<button type="submit" class="btn blue">Submit</button>
							<button type="button" class="btn default">Cancel</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
</html>
