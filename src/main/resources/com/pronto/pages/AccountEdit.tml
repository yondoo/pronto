<html t:type="layout" title="About pronto"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter">
<div class="row">
	<div class="col col-md-12">
		<t:form>
			<label>Нэвтрэх нэр</label>
			<input class="form-control" t:type="textfield" t:id="username"
				t:validate="Required" t:value="account?.username" />

			<label>Нууц үг</label>
			<t:passwordfield class="form-control" t:id="password" type="password"
				t:validate="Required" t:value="account?.password" />

			<br />
			<button type="submit" class="btn btn-primary">
				<i class="fa fa-save"></i> Хадгалах
			</button>
		</t:form>
	</div>
</div>
</html>
